{%- assign id = id | default: false -%}
{%- assign label = label | default: false -%}
{%- assign placeholder = placeholder | default: blank -%}
{%- assign name = name | default: false -%}
{%- assign label_top = label_top | default: false -%}
{% capture class %}form-field form-field--email{% if class %} {{- class -}}{% endif %}{% if label_top %} form-field--label-top{% endif %}{% endcapture %}

{% if name and id %}
    <div class="{{- class -}}" data-module="input-email">
        <div class="form-field__input-wrapper">
            <input class="form-field__input" type="email" id="{{- id -}}" name="{{- name -}}"
                   placeholder="{{- label -}}">
        </div>
    </div>
{% endif %}
