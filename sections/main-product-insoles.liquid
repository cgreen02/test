<section id="product">

    <div id="productMobile">
        <div id="productTitleMobile">{{ title }}</div>
        <div id="productStarsMobile">
            <div data-oke-star-rating data-oke-reviews-product-id="shopify-{{ product.id }}"></div>
        </div>
        {% if product.handle == "vktry-insoles-gold" or product.handle == "vktry-insoles-silver" %}
            <img id="productGuaranteeMobile" src="{{ 'money-back.svg' | file_url }}">
        {% endif %}
    </div>

    <div id="productVisual">

        <div id="productSwiper" class="swiper">
            <div id="productSwiperWrapper" class="swiper-wrapper">
                {% for media in product.media %}
                    {% if forloop.index > 1 %}
                        {% if media.media_type == "video" %}
                            <video class="productSwiperImage swiper-slide" src="{{ media.sources[1].url }}" poster="{{ media.preview_image | image_url }}" controls></video>
                        {% else %}
                            <img class="productSwiperImage swiper-slide" src="{{ media | image_url: width: 1000 }}" alt="{{ media.alt }}">
                        {% endif %}
                    {% endif %}
                {% endfor %}
            </div>
        </div>

        <div id="productThumbnails">
            {% for media in product.media %}
                {% if forloop.index > 1 %}
                    {% if media.media_type == "video" %}
                        <img id="thumbnail-{{ media.id }}" index="{{ forloop.index | minus: 1 }}" class="productThumbnail" src="{{ media.preview_image | image_url }}" alt="{{ media.preview_image.alt }}">
                    {% else %}
                        <img id="thumbnail-{{ media.id }}" index="{{ forloop.index | minus: 1 }}" class="productThumbnail {% if forloop.index == 2 %}active{% endif %}" src="{{ media | image_url: width: 1000 }}" alt="{{ media.alt }}">
                    {% endif %}
                {% endif %}
            {% endfor %}
        </div>

    </div>

    <div id="productContent">
        {% if product.handle == "vktry-insoles-gold" or product.handle == "vktry-insoles-silver" %}
            <img id="productGuarantee" src="{{ 'money-back.svg' | file_url }}" alt="90 day money back guarantee">
        {% endif %}
        <div id="productTitle">{{ title }}</div>

        <div id="productStars">
