        <div id="productForm">
            <div id="productPairs">
                {% for i in (1..10) %}
                    <div class="productPair {% if i == 1 %}active{% endif %}">
                        <div class="productPairTitle">PAIR {{ i }}</div>
                        <div class="productPairActions">
                            <div class="productPairEdit">edit</div>
                            |
                            <div class="productPairRemove">remove</div>
                        </div>
                        <dialog class="productPairModal">
                            <form class="productPairModalContent">
                                <div class="productPairModalTitle">Pair {{ i }}</div>

                                <label class="productPairModalLabel">
                                    gender
                                    <select class="productPairModalLabelSelect optionDropdown" name="gender" required>
                                        <option disabled selected>Choose gender</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </label>

                                <label class="productPairModalLabel">
                                    shoe type
                                    <select class="productPairModalLabelSelect optionDropdown" name="sport" required>
                                        <option disabled selected>Choose sport</option>
                                        {% for sport in sports %}
                                            <option value="{{ sport }}">
                                                {% if sport == "Football" %}
                                                    Football (American)
                                                {% elsif sport == "Running" %}
                                                    Running (Distance)
                                                {% elsif sport == "Track & Field" %}
                                                    Track Spikes
                                                {% else %}
                                                    {{ sport }}
                                                {% endif %}
                                            </option>
                                        {% endfor %}
                                    </select>
                                </label>

                                <label class="productPairModalLabel">
                                    shoe size
                                    <select class="productPairModalLabelSelect optionDropdown" name="size" required>
                                        <option disabled selected>Choose size</option>
                                        {% for size in sizes %}
                                            <option value="{{ size }}">{{ size }}</option>
                                        {% endfor %}
                                    </select>
                                </label>

                                <label class="productPairModalLabel">
                                    weight
                                    <select class="productPairModalLabelSelect optionDropdown" name="weight" required>
                                        <option disabled selected>Choose weight</option>
                                        {% for weight in weights %}
                                            <option value="{{ weight }}">{{ weight }}</option>
                                        {% endfor %}
                                    </select>
                                </label>


                                <label class="productPairModalLabel">
                                    age
                                    <select class="productPairModalLabelSelect optionDropdown" name="age" required>
                                        <option disabled selected>Choose age</option>
                                        {% for age in ages %}
                                            <option value="{{ age }}">{{ age }}</option>
                                        {% endfor %}
                                    </select>
                                </label>

                                <button class="productPairModalUpdate button" disabled>Update</button>
                                <button class="productPairModalCancel" type="button">cancel</button>

                                <button class="productPairModalExit" type="button">close</button>
                            </form>
                        </dialog>
                    </div>
                {% endfor %}
            </div>

            <div id="productAction">
                <button id="productActionSame"><span>+</span> same as first</button>
                <button id="productActionNew"><span>+</span> add a new pair</button>
            </div>

            <button id="productATC" class="button disabled">
                Configure Your Insole Above
            </button>

            {% if product.handle == "vktry-insoles-gold" or product.handle == "vktry-insoles-platinum" %}
                <div id="productShipping">Free Shipping in the US</div>
            {% endif %}

            {% unless product.handle == "vktry-insoles-platinum" %}
                <div id="productBulk">For 11+ pairs or bulk/team orders call 1.844.468.5879</div>
            {% endunless %}
        </div>

        {% if settings.multi_buy %}
            {% if product.handle == "vktry-insoles-gold" or product.handle == "vktry-insoles-silver" %}
                <div id="productSavings">
                    <div>Buy 2
                        <span>Save {{ cart.currency.symbol }}{{ product.price | times: 0.15 | divided_by: 100 | round }}</span> per pair
                    </div>
                    <div>Buy 3
                        <span>Save {{ cart.currency.symbol }}{{ product.price | times: 0.20 | divided_by: 100 | round }}+</span> per pair
                    </div>
                    <div>Buy 5+
                        <span>Save {{ cart.currency.symbol }}{{ product.price | times: 0.25 | divided_by: 100 | round }}+</span> per pair
                    </div>
                </div>
            {% elsif product.handle == "vktry-insoles-platinum" %}
                <div id="productSavings">
                    <div></div>
                    <div>Buy 2 <span>Save $50</span> per pair</div>
                </div>
            {% endif %}
        {% endif %}

        {% if product.handle == "vktry-insoles-platinum" %}
            <div id="productQuestions">
                <b>Have Questions?</b>
                <br>
                <a href="tel:18778587979">Call for a Free Consultation</a> with our Board Certified Pedorthist
            </div>
        {% endif %}
    </div>
</section>


