<style>
    .stat-header__container {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        padding-bottom: 5rem;
        padding-top: 5rem;
        position: relative
    }

    @media (max-width: 767px) {
        .stat-header__container {
            -webkit-box-orient: vertical;
            -webkit-box-direction: normal;
            -webkit-flex-direction: column;
            -ms-flex-direction: column;
            flex-direction: column;
            -webkit-box-align: center;
            -webkit-align-items: center;
            -ms-flex-align: center;
            align-items: center
        }
    }

    .stat-header__container:after {
        content: "";
        display: block;
        height: 1px;
        position: absolute;
        bottom: 0;
        width: calc(100% - 5rem);
        background-color: #c1c1e1
    }

    .stat-header__stats {
        display: -webkit-box;
        display: -webkit-flex;
        display: -ms-flexbox;
        display: flex;
        width: 50%;
        color: #3b3899
    }

    @media (max-width: 767px) {
        .stat-header__stats {
            width: 100%
        }
    }

    .stat-header__info {
        width: 50%
    }

    @media (max-width: 991px) and (min-width: 768px) {
        .stat-header__info {
            margin-left: 4rem
        }
    }

    @media (max-width: 767px) {
        .stat-header__info {
            width: 100%;
            margin-top: 4rem
        }
    }

    .stat-header__stat {
        width: 50%
    }

    .stat-header__stat-description {
        margin-top: 1rem;
        font-size: 16px;
        line-height: 22px;
        font-weight: 700;
    }

    .stat-header__description {
        margin-top: 2rem;
        font-size: 14px;
        font-weight: 400;
        line-height: 17px;
    }

    @media (min-width: 768px) {
        .stat-header__description {
            max-width: 400px
        }
    }
</style>

<section class="stat-header" data-module="stat-header">
    <div class="stat-header__container container">
        <div class="stat-header__stats">
            {% for block in section.blocks %}
                <div class="stat-header__stat">
                    <h3 class="stat-header__stat-val h3">{{- block.settings.title -}}</h3>
                    <p class="stat-header__stat-description b2 b2--bold">{{- block.settings.description -}}</p>
                </div>
            {% endfor %}
        </div>
        <div class="stat-header__info">
            {% if section.settings.title != blank %}
                <h2 class="stat-header__title h4">{{- section.settings.title -}}</h2>
            {% endif %}
            {% if section.settings.description != blank %}
                <p class="stat-header__description b3">{{- section.settings.description -}}</p>
            {% endif %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Stat Header",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description"
    }
  ],
  "blocks": [
    {
      "name": "Stat",
      "type": "stat",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Stat Header",
      "settings": {
      },
      "blocks": [

      ]
    }
  ]
}
{% endschema %}