<style>
    .cta {
    }

    .ctaButtons {
        display: flex;
        gap: 16px;
        justify-content: center;
        flex-wrap: wrap;
        margin-bottom: 60px;
    }

    @media (max-width: 800px) {
        .ctaButtons {
            padding: 0 40px;
        }
    }
</style>

<section class="cta">
    <div class="ctaButtons">
        {% for block in section.blocks %}
            <a href="{{ block.settings.link }}" class="button">{{ block.settings.label }}</a>
        {% endfor %}
    </div>
</section>

{% schema %}
{
  "name": "CTA",
  "settings": [

  ],
  "blocks": [
    {
      "name": "Button",
      "type": "button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Button Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Button Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "CTA",
      "settings": {
      },
      "blocks": [

      ]
    }
  ]
}
{% endschema %}