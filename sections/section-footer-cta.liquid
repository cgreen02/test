<style>

    .footer-cta__links .footer-cta__link:last-of-type {
        background-color: #fff;
        border-color: #fff;
    }

    .footer-cta__links .footer-cta__link:last-of-type:hover {
        background-color: transparent;
    }

    .footer-cta__links .footer-cta__link:last-of-type:hover .button-text {
        color: white;
    }


    .footer-cta .image__img {
        width: auto;
    }

    .footer-cta .footer-cta__title {
        font-size: 42px;
        line-height: 60px;
    }

    .footer-cta .h4 {
        font-size: 18px;
    }

    .footer-cta_blurb {
        margin-top: 10px;
        margin-bottom: 4rem;
    }

    .footer-cta__desktop-image, .footer-cta__mobile-image {
        position: absolute;
        width: auto;
        height: 100%;
        object-fit: cover;
    }

    .footer-cta__links {
        gap: 30px;
    }

</style>


<section class="footer-cta" data-module="footer-cta">
    <div class="footer-cta__img-box z1">
        {% if section.settings.desktop_image %}
            <img src="{{ section.settings.desktop_image | image_url: width: 1500 }}"
                 alt="{{ section.settings.desktop_image.alt }}" class="footer-cta__desktop-image">
        {% endif %}
        {% if mobile_image %}
            <img src="{{ section.settings.mobile_image | image_url: width: 1500 }}"
                 alt="{{ section.settings.mobile_image.alt }}" class="footer-cta__mobile-image">
        {% endif %}
    </div>
    <div class="container footer-cta__container z2">
        {% if section.settings.subtitle %}
            <p class="h4">{{ section.settings.subtitle }}</p>
        {% endif %}
        {% if section.settings.title %}
            <p class="h2 footer-cta__title">{{ section.settings.title }}</p>
        {% endif %}

        <p class="footer-cta_blurb">Questions? Click to chat call or email us!</p>
        <div class="footer-cta__links">
            
            
            {% for block in section.blocks %}
                {% if block.type == "button" %}
                    <a href="{{ block.settings.link }}"
                       class="button {% if forloop.index == 2 %} buttonPrimaryOutline {% endif %} {% if forloop.index == 3 %} buttonSecondary{% endif %}">{{ block.settings.label }}</a>
                {% endif %}
            {% endfor %}
        </div>
    </div>
</section>

{% schema %}
{
  "name": "Footer CTA",
  "settings": [
    {
      "type": "image_picker",
      "id": "desktop_image",
      "label": "Desktop Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    }
  ],
  "blocks": [
    {
      "name": "Button",
      "type": "button",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Label"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Footer CTA",
      "settings": {
      },
      "blocks": [

      ]
    }
  ]
}
{% endschema %}
