<style>
    /***************
Hero
 */

    #hero {
        border-top: 2px solid var(--gold);
    }

    #heroTitle {
        font-size: 32px;
        line-height: 34px;
        margin: auto;
        text-align: center;
        font-weight: bold;
        padding: 20px 20px 10px;
    }

    #heroTitle br {
        display: none;
    }

    #heroSwiper {
        cursor: pointer;
    }

    #heroButtonMobile {
        display: none;
    }

    @media (max-width: 800px) {
        #hero {
            margin-bottom: 15px;
        }

        #heroTitle {
            font-size: 24px;
            line-height: 28px;
            padding: 20px 0 10px;
        }

        #heroTitle br {
            display: initial;
        }

        #heroButtonMobile {
            display: block;
            margin-bottom: 22px;
            max-width: 90%;
        }
    }
</style>

<div id="hero">
    <div id="heroTitle">For Student Athletes <br>All The Way To The Pros</div>

    <div id="heroSwiper" class="swiper openParents">
        <div class="swiper-wrapper">
            {% assign sports = "jump,injury,run" | split: "," %}
            {% for sport in sports %}
                {% capture mobileURL %}refer-mobile-{{ sport }}.jpg{% endcapture %}
                {% capture dekstopURL %}refer-{{ sport }}.jpg{% endcapture %}
                <picture class="swiper-slide">
                    <source media="(max-width: 800px)" srcset="{{ mobileURL | file_url }}">
                    <source srcset="{{ dekstopURL | file_url }}">
                    <img src="{{ dekstopURL | file_url }}" alt="The only insoles proven to help you jump higher">
                </picture>
            {% endfor %}
        </div>
    </div>
</div>

<div id="heroButtonMobile" class="button center openParents">Tell Your Parents About VKTRY</div>

<script>
    new Swiper("#heroSwiper", {
        loop: true,
        autoplay: {
            delay: 2000
        },
        effect: "fade"
    });
</script>