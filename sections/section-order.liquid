<style>
    .order {
        padding: 72px 20px 115px;
    }

    .orderInner {
        max-width: 545px;
        margin: auto;
    }

    .orderTitle {
        font-weight: bold;
        font-size: 21px;
        line-height: 32px;
        text-align: center;
        max-width: 475px;
        margin: 0 auto 17px auto;
    }

    .orderTitle span:first-child {
        display: block;
        font-size: 32px;
    }

    .orderTitle span:not(span:first-child) {
        color: var(--gold);
    }

    .orderSubtitle {
        font-size: 18px;
        line-height: 21px;
        text-align: center;
        margin-bottom: 10px;
    }

    .orderSubtitle [href*=tel] {
        font-weight: bold;
        color: var(--gold);
    }

    .orderSubtitle [href*=mailto] {
        color: inherit;
        text-decoration: none;
    }

    .orderLegal {
        font-size: 14px;
        line-height: 21px;
        text-align: center;
        font-style: italic;
    }

    .orderLegal [href*=tel] {
        font-weight: bold;
        color: var(--gold);
    }

    .orderImage {
        display: block;
        width: 100%;
        height: auto;
    }

    @media (max-width: 800px) {
        .order {
            padding: 40px 20px;
        }

        .orderTitle {
            line-height: 26px;
        }
    }
</style>

<div class="order">
    <div class="orderInner">
        <div class="orderTitle">
            <span>Have Questions?</span>
            Get a <span>free phone consultation</span> with a VKTRY Board Certified Pedorthist is required.
        </div>
        <div class="orderSubtitle">
            Call <a href="tel:18778587979">1-877-858-7979</a> or email
            <a href="mailto:custom@vktrygear.com">custom@vktrygear.com</a>
        </div>
        <div class="orderLegal">
            Must be 18 years or older or accompanied by parent/guardian on the call.
        </div>
        <img class="orderImage" src="{{ 'box.png' | file_url }}" alt="vktry insole box">
    </div>
</div>
