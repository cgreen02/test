{%- assign product_menu_title = section.settings.product_menu_title | default: blank -%}
{%- assign company_menu_title = section.settings.company_menu_title | default: blank -%}
{%- assign resources_menu_title = section.settings.resources_menu_title | default: blank -%}
{%- assign social_title = section.settings.social_title | default: blank -%}
{%- assign footer_logo = section.settings.footer_logo | image_url: width: 400 | default: blank -%}
{%- assign copyright = section.settings.copyright | default: blank -%}

<footer class="footer" data-module="footer">
    <div class="container footer__container">
        <div class="footer__list">
            <div class="footer__list__item">
                {% if product_menu_title %}
                    <p class="h8 footer__list__title">{{ product_menu_title }}</p>
                {% endif %}
                {% for link in linklists.footer-product-menu.links %}
                    <a href="{{ link.url }}" class="b1 footer__list__link">{{ link.title }}</a>
                {% endfor %}
            </div>
            <div class="footer__list__item">
                {% if company_menu_title %}
                    <p class="h8 footer__list__title">{{ company_menu_title }}</p>
                {% endif %}
                {% for link in linklists.footer-company-menu.links %}
                    <a href="{{ link.url }}" class="b1 footer__list__link">{{ link.title }}</a>
                {% endfor %}
            </div>
            <div class="footer__list__item">
                {% if resources_menu_title %}
                    <p class="h8 footer__list__title">{{ resources_menu_title }}</p>
                {% endif %}
                {% for link in linklists.footer-resources-menu.links %}
                    <a href="{{ link.url }}" class="b1 footer__list__link">{{ link.title }}</a>
                {% endfor %}
            </div>
        </div>
        <div class="footer__contact">
            {% if social_title %}
                <p class="h4 footer__contact__title">{{ social_title }}</p>
            {% endif %}
            <form class="footer-contact__email">
                {%- render 'input-email',
                        name: 'footer-email',
                        label: 'Your Email',
                        id: 'k_id_email',
                        class: 'form-field--newsletter'
                -%}
                <button class="footer-contact__submit z2 b3 b3--bold" type="submit">Submit</button>
            </form>
            {% render 'form-success-message', GA: 'email-signup-success', class: 'footer-contact__success no-btn relative hidden', title: "Thank you!", message: "You've successfully subscribed to our newsletter!" %}
            {% render 'form-success-message', class: 'footer-contact__error no-btn relative hidden', title: "Oops!", message: "Looks like an error occurred. Please try again at a later time." %}

            <div class="social-icons" data-module="social-icons">
                <a class="social-icons__link" target="_blank" href="https://www.facebook.com/TeamVKTRY/" title="facebook">
                    {% render 'svg', type: 'facebook' %}
                </a>
                <a class="social-icons__link" target="_blank" href="https://twitter.com/TeamVKTRY" title="twitter">
                    {% render 'svg', type: 'twitter' %}
                </a>
                <a class="social-icons__link" target="_blank" href="https://www.instagram.com/teamvktry/" title="instagram">
                    {% render 'svg', type: 'instagram' %}
                </a>
                <a class="social-icons__link" target="_blank" href="https://www.youtube.com/channel/UCV7TeucnFGbnAiS2_g1POzA?view_as=subscriber" title="youtube">
                    {% render 'svg', type: 'youtube' %}
                </a>
                <a class="social-icons__link" target="_blank" href="https://www.tiktok.com/@teamvktry" title="tiktok">
                    <svg fill="#c1c1e1" xmlns="http://www.w3.org/2000/svg" height="1em" viewBox="0 0 448 512"><!--! Font Awesome Free 6.4.0 by @fontawesome - https://fontawesome.com License - https://fontawesome.com/license (Commercial License) Copyright 2023 Fonticons, Inc. -->
                        <path d="M448,209.91a210.06,210.06,0,0,1-122.77-39.25V349.38A162.55,162.55,0,1,1,185,188.31V278.2a74.62,74.62,0,1,0,52.23,71.18V0l88,0a121.18,121.18,0,0,0,1.86,22.17h0A122.18,122.18,0,0,0,381,102.39a121.43,121.43,0,0,0,67,20.14Z"/>
                    </svg>
                </a>
            </div>

        </div>
    </div>
    <div class="container  footer__container--bottom">
        <div class="footer__seperator"></div>
    </div>
    <div class="container footer__container footer__container--bottom">
        <div class="footer__company">
            <div class="footer__logo">
                {% if footer_logo %}
                    <a href="{{ shop.url }}" title="VKTRY logo">
                        {% render 'svg', type: 'gray-logo' %}
                    </a>
                {% endif %}
            </div>
            <p class="b1 footer__copyright">Â© 2016-{{ "now" | date: "%Y" }} {{ copyright }}</p>
        </div>
        <div class="footer__terms">
            {% for link in linklists.terms-menu.links %}
                <a href="{{ link.url }}" class="footer__term-link b1">{{ link.title }}</a>
            {% endfor %}
        </div>
    </div>

</footer>

{% schema %}
{
    "name": "Footer",
    "limit": 1,
    "settings": [
        {
            "type": "text",
            "id": "product_menu_title",
            "label": "Product Menu Title"
        },
        {
            "type": "text",
            "id": "company_menu_title",
            "label": "Company Menu Title"
        },
        {
            "type": "text",
            "id": "resources_menu_title",
            "label": "Resources Menu Title"
        },
        {
            "type": "image_picker",
            "id": "footer_logo",
            "label": "Footer Logo"
        },
        {
            "type": "text",
            "id": "copyright",
            "label": "Copyright"
        },
        {
            "type": "text",
            "id": "social_title",
            "label": "Social Title"
        }
    ],
    "blocks": [
    ],
    "presets": [
        {
            "name": "Footer"
        }
    ]
}
{% endschema %}

