        order: 2;
    }

    .hiw-features-alt .hiw-features-right {
        order: 1;
    }


    .hiw-features-alt .hiw-features__container {
        background-color: var(--gold);
        color: #000 !important;
    }

    .hiw-features-alt .hiv-feature-bg-wrap {
        clip-path: polygon(0 0, 100% 0, 75% 100%, 0% 100%)
